  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Ajouter commande</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active">Ajouter commande</li>
            </ol>
          </div>
        </div>

        {{#if alert}}


<div class="alert alert-success alert-dismissible">
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                  <h5><i class="icon fas fa-check"></i> Alert!</h5>
  {{alert}}
                </div>
{{/if}}
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <form method="post" action="/addcommande" novalidate>
      <div class="row">
        <div class="col-md-6">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">General</h3>

              <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                  <i class="fas fa-minus"></i>
                </button>
              </div>
            </div>
            <div class="card-body">
             <div class="form-group">
                <label for="status">Status de le commande</label>
                <select name="status" class="form-control custom-select">
                  <option selected disabled>Choisir le type</option>
                  <option value="to buy">to buy</option>
                  <option value="bought">bought</option>
                  <option value="packed">packed</option>
                  <option value="shipped">shipped</option>
                  <option value="arrived"> arrived</option>
                   <option value="delivered"> delivered</option>
                    <option value="done"> done</option>
                </select>
              </div>
              <div class="form-group">
                <label for="date">date de commande</label>
                <input type="date" name="date" class="form-control">

              </div>
              <div class="form-group">
                <label for="dispatchedDate">date de dispatch</label>
                <input type="date" name="dispatchedDate" class="form-control">
              </div>
                <div class="form-group">
                <label for="noParcel">no de colis</label>
                <input type="text" name="noParcel" class="form-control">
              </div>
              <div class="form-group">
                <label for="pointsGagne">points Gagnes</label>
                <input type="number" name="pointsGagne" class="form-control">
              </div>
            
           
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <div class="col-md-6">
          <div class="card card-secondary">
            <div class="card-header">
              <h3 class="card-title">Ajouter les articles</h3>

              <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                  <i class="fas fa-minus"></i>
                </button>
              </div>
            </div>
                     <div class="card-body">

              <div class="form-group">
                        <label>Selectionner les articles a ajouter</label>
                        <select name="articles" multiple="" class="form-control">
                        {{#each rows}}

                          <option value={{this.noArticle}}>{{this.designation}}</option>
						{{/each}}

            
                        </select>
                      </div>

            <div class="form-group">
                        <label>Selectionner le client concerne</label>
                        <select name="client" class="form-control">
                        {{#each rows2}}

                          <option value={{this.noClient}}>{{this.nomClient}}</option>
						{{/each}}

            
                        </select>
                      </div>
                                  </div>

            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <input type="reset"  value="annuler" class="btn btn-secondary">
          <input type="submit" value="ajouter commande" class="btn btn-success float-right">
        </div>
      </div>

      </form>
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
